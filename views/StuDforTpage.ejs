                      <h2>Take Attendence</h2> 
                    </div>
                  </a>
        
                 
                <a href="/">
                  <div class="log-out">
                     <h2> Log out</h2>
                
                  </div>
                 </a>
          </div>
        <div id="subjectName">
           
          
            <h2 style="color:red"><%= subject.toUpperCase() %> [<%= year.toUpperCase() %> ]</h2>
            
        </div>
        
        
        <form action="/TeacherHome/ClassesForAttendenc/TakeAttendence" method="POST">
        <div class="table-container">
            <table>
                <tr>
                    <th>
                        #Roll
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Dept.
                    </th>
                    <th>
                        Semester
                    </th>
                    <th >
                       Mobile
                    </th>
                    <th style="width:12%">Total Occured</th>
                    <th  style="width:12%">Total Attended</th>
                    <th  style="width:12%">Attendence Percentage(%)</th>
                </tr>

                
                
                <%  Array.prototype.forEach.call(newStudents, student =>{  %>
                   
                    <tr>
                        <td><%= student.roll %></td>
                        <td> <%= student.fname.toUpperCase() %> <%= student.lname.toUpperCase() %></td>
                        <td> <%= student.dept.toUpperCase() %></td>
                        <td> <%= student.sem.toUpperCase() %></td>
                        <td> <%= student.mobile %></td>
                        <td style="width:12%"><%= student.subjs[Index].totalOccured  %></td>
                        <td  style="width:12%"><%= student.subjs[Index].totalAttended %></td>

                        <% var a= student.subjs[Index].totalOccured ; %>
                        <% var b =student.subjs[Index].totalAttended ; %>
                        <% var p = (b/a)*100; %>

                        <td  style="width:12%"><%= Math.round(p) %></td>

                       
                       

                    </tr>

               <% }); %>

                
            </table>
           
        </div>
    </form>
      
    </body>

