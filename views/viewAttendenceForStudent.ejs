        <div class="table-container">
            <table>
                <tr>
                    <th>SUBJECTS</th>
                    <% for(var i =0;i< foundedStudent.subjs.length;i++){ %>
                        <th><%= foundedStudent.subjs[i].subjName.toUpperCase() %></th>
                    <% } %>
                   
                </tr>

                <tr>
                    <td>Total Occured</td>
                    <% for(var i =0;i< foundedStudent.subjs.length;i++){ %>
                        <td><%= foundedStudent.subjs[i].totalOccured %></td>
                    <% } %>
                   

                </tr>
                <tr>
                    <td>Total Attended</td>
                    <% for(var i =0;i< foundedStudent.subjs.length;i++){ %>
                        <td><%= foundedStudent.subjs[i].totalAttended %></td>
                    <% } %>
                </tr>
                <tr>
                    <td>Percentage</td>
                    <% for(var i =0;i< foundedStudent.subjs.length;i++){ %>


                        <% var a = foundedStudent.subjs[i].totalOccured; %>
                         <% var b = foundedStudent.subjs[i].totalAttended; %>
                         <% var p = (b/a)*100;  %>
                        <td><%= Math.round(p) %></td>


                    <% } %>
                </tr>
                
            </table>
           
        </div>
  
      
