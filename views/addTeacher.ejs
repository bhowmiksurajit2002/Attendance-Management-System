    <body>
        <div class="Navigation">
            <h1> Attendence Management System </h1>
          </div>
          
          <div class="createTeacher">
            <form  action="/Admin/addTeacher" method="POST">
                <ul>
                    <li id="one">
                        <span class="required">Firstname</span>
                 
                    <input type="text" required placeholder="Enter First Name" name="firstName">
                </li>
                
                <li id="two">
                    <span class="required">
                        Lastname
                    </span>
                    
                    <input type="text" placeholder="Enter Lastname" name="lastName">
                </li>
                    
                    <li id="three">
                        <span class="required">College Id</span>
                       
                        <input type="text" placeholder="Enter Id" name="college_Id">

                    </li>
                    
                    <li id="four">
                        <span class="required">Department</span>
                       
                        <select name="Department">
                            <option value="cse">CSE</option>
                            <option value="it">IT</option>
                            <option value="ece">ECE</option>
                            <option value="me">ME</option>
                            <option value="aeie">AEIE</option>
                        </select>
                    </li>
                   
                    <li id="five">
                        <span class="required">Mobile</span>
                        <input type="text" placeholder="Enter Mobile no" name="Mobile">
                    </li>
                    
                    <li id="six">
                        <span class="required">User Id</span>
                        <input type="text" placeholder="Enter User Id" name="usrId">
                    </li>
                   <li id="seven">
                    <span class="required" >
                        Password
                    </span>
                    <input type="text" placeholder="Enter password" name="Password">
                   </li>
                <li id="nine">
                    <button type="submit" class="btn btn-success" >CREATE</button>
                </li>
                   
                </ul>
               
            </form>


          </div>

          <div class="teacher-list-container">
            <h1 id="heading">TEACHER LIST</h1>
            <div class="table-container">
            <table  >
                <tr>
                    <th>College Id</th>
                    <th>Name</th>
                    <th>Department</th>
                    <th>Mobile</th>
                    <th>usr Id</th>
                    <th>Passwor</th>
                    <th>Delete</th>
                </tr>
                
                <% if(newTeachers!=null){ %>  
                    <% Array.prototype.forEach.call(newTeachers, teacher =>{ %>
                     <form action="/Admin/addTeacher/delete" method="POST">
 
                 <tr> 
                     
                     <td><%= teacher.collegeId %></td>
                     <td><%=teacher.fname.toUpperCase()  %>  <%= teacher.lname.toUpperCase() %></td>
                     <td><%= teacher.dept.toUpperCase() %></td>
                     <td><%= teacher.mobile.toUpperCase() %></td>
                     <td><%= teacher.userId %></td>
                     <td><%= teacher.password %></td>
                     <td >
                         <button type="submit" class="btn btn-transparent" name="button" value="<%= teacher._id %>">
                             <i class="fa fa-trash" aria-hidden="true"  style="color:yellow"></i>
                         </button>
                         
 
                         </td>
                 </tr>
             </form>
                 <% });}%>
                
            </table>
        </div>
          </div>
    </body>





